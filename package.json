{
  "name": "always-supplied",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "validate-code": "npm run lint && npm run format && npm run type-check",
    "supabase:migrate": "echo 'Please run these migration files in your Supabase SQL Editor:' && echo '1. supabase/migrations/001_initial_cloud_schema.sql' && echo '2. supabase/migrations/002_rls_policies.sql' && echo '3. supabase/migrations/003_functions_and_triggers.sql'"
  },
  "dependencies": {
    "@inlang/paraglide-js": "^2.2.0",
    "@supabase/supabase-js": "^2.57.4",
    "@unocss/reset": "^66.5.0",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^13.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.2.0",
    "lucide-vue-next": "^0.542.0",
    "pinia": "^3.0.3",
    "radix-vue": "^1.9.17",
    "reka-ui": "^2.5.0",
    "tailwind-merge": "^3.3.1",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.2.3",
    "@playwright/test": "^1.54.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "typescript": "~5.8.0",
    "unocss": "^66.5.0",
    "unocss-preset-animations": "^1.2.1",
    "unocss-preset-shadcn": "^1.0.1",
    "vite": "^7.0.6",
    "vite-plugin-pwa": "^1.0.3",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
